<!-- 定义名字空间 -->
<mapper namespace="teas">
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into teas(tname) values(#{tname})
    </insert>
    
    <insert id="insertLink">
      <foreach collection="stus" item="s">
          insert into links(tid,sid) values(#{id} , #{s.id}) ;
      </foreach>
    </insert>

